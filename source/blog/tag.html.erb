---
pageable: true
per_page: 12
---

<body class="blog-wrapper">
<div id="blog-article" role="main">
  <div class="article-content">
    <article>
      <header>
        <h1 class="title">Articles tagged '<%= tagname %>'</h1>
        <div class="article-info">
          <% if paginate %>
            <p>Page <%= page_number %> of <%= num_pages %></p>

            <% if prev_page %>
              <p><%= link_to 'Previous page', prev_page %></p>
            <% end %>
          <% end %>
        </div>
      </header>

      <ul>
        <% page_articles.each_with_index do |article, i| %>
          <li><%= link_to article.title, article %> <span>
            <!--<#%= article.date.strftime('%b %e') %>-->
          </span></li>
        <% end %>
      </ul>

      <% if paginate %>
        <% if next_page %>
          <p><%= link_to 'Next page', next_page %></p>
        <% end %>
      <% end %>

    </article>

    <section class="sidebar">
      <div class="article-list">
        <h2>Recent Articles</h2>
        <ul>
          <% blog.articles[0...10].each do |article| %>
            <li><%= link_to article.title, article %>
              <!--<span><#%= article.date.strftime('%b %e') %></span>-->
            </li>
          <% end %>
        </ul>
      </div>
      <div class="category-list">
        <h2>Categories</h2>
        <ul class="tags">
          <% blog.tags.each do |tag, articles| %>
            <li class="tag"><%= link_to tag, tag_path(tag) %>
              <!--(<%#= articles.size %>)-->
            </li>
          <% end %>
        </ul>
      </div>

      <div class="promo-email">
        <h2>Sign up for email</h2>
        <%= partial "partials/mailchimp_signup" %>
      </div>
    </section>
  </div>
</div>

<%= partial "partials/ga" %>
</body>
</html>