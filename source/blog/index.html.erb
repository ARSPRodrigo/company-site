---
pageable: true
per_page: 10
---

<section id="blog-index">
  <% page_articles.each_with_index do |article, i| %>
    <article>
      <% if article.data.image %>
        <%= image_tag "blog/#{article.data.image}", :alt => "preview" %>
      <% end %>
      <h2><%= article.title %></h2>
      <h3>By <%= data.team[article.data.author].name %></h3>
      <p><%= article.data.summary || article.summary %></p>
      <%= link_to "More...", article %>
    </article>
  <% end %>

  <article>
      <h2>Categories</h2>
      <ul>
        <% blog.tags.each do |tag, articles| %>
          <li><%= link_to tag, tag_path(tag) %> (<%= articles.size %>)</li>
        <% end %>
      </ul>
  </article>

  <article>
      <%= partial "partials/mailchimp_signup" %>
  </article>

</section>

<% if paginate %>
<nav>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>

  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
</nav>
<% end %>