<div id="team" class="hidden">
	<h1>Meet The Team</h1>
	<h2>
		Our team is our strongest asset and is comprised of ultra-talented and experienced designers, 
		developers and programmers with a shared commitment to communication, collaboration, and good work. Meet
		the people dedicated to designing, developing, and supporting your project.
	</h2>
	<% data.team.each do |short_name, person| %>
		<div class="team-member">
			<div class="team-member-image <%= cycle("right", "left") %>">
				<% if image_exists?("team/#{short_name}") %>
					<%= image_tag "team/#{short_name}.png", :alt => "#{short_name.capitalize}'s picture" %>
				<% end %>
			</div>
			<h1><%= person.name %></h1>
			<h2><%= person.title %></h2>
			
			<% person.bio.each do |pgraph| %>
				<p><%= pgraph %></p>
			<% end %>

			<% if person.facebook.present? %>
				<a href="http://facebook.com/<%= person.facebook %>"><i class="icon-facebook-sign"></i></a>
			<% end %>

			<% if person.twitter.present? %>
				<a href="http://twitter.com/<%= person.twitter %>"><i class="icon-twitter-sign"></i></a>
			<% end %>

			<% if person.linkedin.present? %>
				<a href="http://linkedin.com/in/<%= person.linkedin %>"><i class="icon-linkedin-sign"></i></a>
			<% end %>

			<% if person.github.present? %>
				<a href="http://github.com/<%= person.github %>"><i class="icon-github-sign"></i></a>
			<% end %>
		</div>
	<% end %>
</div>